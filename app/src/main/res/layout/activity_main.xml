<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.david.lmicube.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Panel 1"
            android:layout_column="0"
            android:layout_row="0"
            android:id="@+id/p1"
            android:layout_weight="1"
            android:onClick="toEmptyActivity"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Panel 3"
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/p3"
            android:layout_weight="1"
            android:onClick="toEmptyActivity"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Panel 5"
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/p5"
            android:layout_weight="1"
            android:onClick="toEmptyActivity"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Panel 2"
            android:layout_column="0"
            android:layout_row="0"
            android:id="@+id/p2"
            android:layout_weight="1"
            android:onClick="toEmptyActivity"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Panel 4"
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/p4"
            android:layout_weight="1"
            android:onClick="toEmptyActivity"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Cube Panel"
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/p6"
            android:layout_weight="1"
            android:onClick="toCubeActivity"/>

    </LinearLayout>


</LinearLayout>

